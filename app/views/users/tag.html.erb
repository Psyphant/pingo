<div class="similar-users">
  <h2><%= t('users_with_tag') %></h2>
  <% if @users.empty? %>
    <%= t('users_with_tag_not_found') %>
  <% else %>
    <div class="users-list">
      <ul>
        <% @users.each do |user|%>
          <li class="user-profile">
            <span class="profile-avatar"><%= link_to image_tag(avatar_url(user.email), alt: "?"), user, :title => user.name, :rel => "tipsy" %></span>
            <span class="profile-name"><%= link_to user.name, user %></span>
          </li>
        <% end %>
      </ul>
    </div>
  <% end %>
</div>
