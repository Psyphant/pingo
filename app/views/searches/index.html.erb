<div class="content white">
  <div class="container-fluid">
    <div class="row">
      <div class="col-md-12">
        <% if @search.blank? %>
          <div class="text-center top-margin">
            <p class="lead"><%= t('search_no_param') %></p>
          </div>
        <% else %>
          <h1>Suchergebnisse f√ºr "<%=@search%>"</h1>
          <div class="row">
            <div class="col-md-6">
              <div class="list">
                <h2><%= t('pins_found') %></h2>
                <% if @pins.empty? %>
                  <p><%= t('pins_no_pins') %></p>
                <% else %>
                  <% @pins.each do |pin| %>
                    <%= render :partial => "pins/pin_box", :locals => {:pin => pin} %>
                  <% end %>
                <% end %>
              </div>
            </div>
            <div class="col-md-6">
              <h2>Gefundene Schlagworte</h2>
              <% if @tags.empty? %>
                <p><%= t('tags_not_found')%></p>
              <% else %>
                <ul class="tag-list overflow">
                  <% @tags.each do |tag| %>
                    <li><%= link_to tag.name, {:controller => :tags, :action => :show, :id => tag.id}, :class => "tag" %></li>
                  <% end %>
                </ul>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
