<!DOCTYPE html>
<html>
<head>
  <title>Duhajo</title>
  <%= stylesheet_link_tag "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body data-controller="<%= controller_name %>" data-action="<%= action_name %>">
  <div id="duhajo">
    <div id="sidebar">
      <div id="logo">
        <%= link_to image_tag("logo.png"), root_path %></a>
      </div>
      <div id="profile">  
        <%if user_signed_in? %>
          <a href="/myprofile">
            <span class="profile-avatar"><%= image_tag avatar_url(current_user), alt: "?" %></span>
          </a>
          <ul aria-haspopup="true" class="profile-menu">
            <li class="more-actions">
              <a href="/myprofile">
                <span class="profile-name">Mein Profil</span>
                <span class="text-arrow"></span>
              </a>
            </li>
            <li class="more-actions open hidden">
              <a href="/myprofile">
                <span class="profile-name"><%= current_user.name %></span>
                <span class="text-arrow"></span>
              </a>
            </li>
          	<ul class="profile-menu-list">
          		<li id="editprofile">
                <a href="/users/<%= current_user.id %>/edit">Profil bearbeiten</a>
              </li>
            	<li id="logout"><%= link_to "Abmelden", '/logout'%></li>
          	</ul>
          </ul>
          <div id="my-job-sidebar">
            <h2>Meine Aufgaben</h2>
            <% @my_jobs = my_jobs %>
            <%if @my_jobs.empty? %>
              <span>Es sind noch keine Jobs vorhanden.</span>
            <% else %>
              <%= sorted_nested_li(@my_jobs, :title) do |job| %>
                <%= link_to job.title, job %>
              <% end %>
            <% end %>
          </div>
        <% else %>
          <%= link_to "Anmelden", new_user_session_path%> oder <%= link_to "Registrieren", new_user_registration_path%>
        <% end %>
        
      </div>
    </div>
    <div id="main">
      <div id="main-navigation">
        <ul>
          <li <%=cp("dashboard")%>><%= link_to t('main_nav_dashboard'), dashboard_path%></li>
          <li <%=cp("jobs")%>><%= link_to t('main_nav_jobs'), jobs_path%></li>
          <li <%=cp("users")%>><%= link_to t('main_nav_workers'), users_path%></li>
          <li <%=cp("tags")%>><%= link_to t('main_nav_tags'), tags_path%></a></li>
        </ul>
        <div id="search"><label for="search"><!-- --></label><input name="search" type="search" placeholder="Durchsuchen" /></div>
      </div>
      <div id="content-container">
        <div id="actionbar">
          <%= yield :actionbar %>
        </div>
        <div id="content-wrapper">
          <%= yield %>
          <%= yield :scripts %>
        </div>
      </div>
    </div>
  </div>
</body>
</html>
