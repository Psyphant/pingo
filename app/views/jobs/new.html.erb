<div class="row large-6 medium-8 large-centered medium-centered columns center white-panel space" id="new-job-page">
  
  <% if !@type.nil? && @type == 0 %>
    <h1>Neue Kategorie</h1>
  <% else %>
    <h1>Neuer Job <% if not @parent_job.nil? %>f√ºr "<%= @parent_job.title %>"<% end %></h1>
  <% end %>
  <%= form_for(@job) do |f| %>
    <% if @job.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@job.errors.count, "error") %> prohibited this job from being saved:</h2>
        <ul>
        <% @job.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
    <% if not @parent_job.nil? %>
      <%= f.hidden_field :parent_id, value: @parent_job.id %>
    <% end %>
    <div class="field">
      <% if not @type.nil? %>
        <%= f.hidden_field :type, value: @type %>
      <% else %>  
          <%= f.label :type, "Typ (0 = Kategorie, 1 = Suche, 2 = Angebot)" %><br />
          <%= f.text_field :type %>
      <% end %>
    </div>
    <div class="field">
      <%= f.label :title %><br />
      <%= f.text_field :title %>
    </div>
    <div class="area html-content">
      <%= f.label :description %><br />
      <%= f.resizable_text_area :description %>
    </div>
    <% if @type.nil? && @type != 0 %>
      <div class="field">
        <%= f.label :skill_list, "Tags (separated by commas)" %><br />
        <%= f.text_field :skill_list %>
      </div>
      <div id="show-deadline-link">
        <%= link_to 'Deadline setzen', '#',
              :onclick => 'showDeadline()'%>
      </div>
      <div id="deadline-field" class="field" style="display: none;">
        <%= f.label :deadline %><br />
        <%= f.date_select :deadline, :include_blank => true, :default => nil %>
      </div>
      <div id="show-place-link">
        <%= link_to 'Ort setzen', '#',
              :onclick => 'showPlace()'%>
      </div>
      <div id="place-field" style="display: none;">
        <div class="field">
          <%= f.label :country %><br />
          <%= f.text_field :country %>
        </div>
        <div class="field">
          <%= f.label :city %><br />
          <%= f.text_field :city %>
        </div>
        <div class="field">
          <%= f.label :street %><br />
          <%= f.text_field :street %>
        </div>
      </div>
    <% else %>
      <div class="field">
        <%= image_tag(@job.picture_url) if @job.picture? %>
        <%= f.file_field :picture %>
        <%= f.hidden_field :picture_cache %>
      </div>
    <% end %>
    <div class="clearfix top-margin">
      <%= link_to 'Abbrechen', jobs_path, :class => "sec-button button left" %>
      <%= link_to 'Erstellen', "#", :onclick => "nicEditors.findEditor('job_description').saveContent();sendForm('new_job');return false;", :class => "button right" %>
    </div>
  <% end %>
</div>