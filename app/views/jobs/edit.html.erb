<div class="row large-6 medium-8 large-centered medium-centered columns center white-panel space" id="new-job-page">
  <h1>Neuer Job <% if not @parent_job.nil? %>f√ºr "<%= @parent_job.title %>"<% end %></h1>
  <%= simple_form_for(@job) do |f| %>
    <% if @job.errors.any? %>
      <div class="error_messages">
        <h2>Form is invalid</h2>
        <ul>
          <% for message in @job.errors.full_messages %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div class="field">
      <%= f.label :title %><br />
      <%= f.text_field :title %>
    </div>
    <div class="area html-content">
      <%= f.label :description %><br />
      <%= f.resizable_text_area :description %>
    </div>
    <div class="field">
      <%= f.label :skill_list, "Tags (separated by commas)" %><br />
      <%= f.text_field :skill_list %>
    </div>
    <% if @job.deadline.nil?
      @setDeadline = true %>
    <div id="show-deadline-link">
      <%= link_to 'Deadline setzen', '#',
            :onclick => 'showDeadline(); return false;'%>
    </div>
    <% end %>
    <div id="deadline-field" class="field" <% if @setDeadline %> style="display: none;" <% end %>>
      <%= f.label :deadline %><br />
      <%= f.date_select :deadline, {:include_blank => true, :default => nil} %>
    </div>
    <% if @job.latitude.nil? && @job.longitude.nil?
      @setPlace = true %>
    <div id="show-place-link">
      <%= link_to 'Ort setzen', '#',
            :onclick => 'showPlace(); return false;'%>
    </div>
    <% end %>
    <div id="place-field" <% if @setPlace %> style="display: none;" <% end %>>
      <div class="field">
        <%= f.label :country %><br />
        <%= f.text_field :country %>
      </div>
      <div class="field">
        <%= f.label :city %><br />
        <%= f.text_field :city %>
      </div>
      <div class="field">
        <%= f.label :street %><br />
        <%= f.text_field :street %>
      </div>
    </div>
    <div class="clearfix top-margin">
      <%= link_to 'Abbrechen', jobs_path, :class => "sec-button button left" %>
      <%= link_to "Entfernen", @job, :method => :delete, :confirm => "Are you sure ?", :class => "sec-button button"%>    
      <%= link_to 'Speichern', "#", :onclick => "nicEditors.findEditor('job_description').saveContent();sendForm('edit_job');return false;", :class => "button right" %>
    </div>
  <% end %>
</div>

<% content_for :actionbar do %>
  <ul class="actions">
    <li><%= link_to 'Speichern', "#", :onclick => "nicEditors.findEditor('job_description').saveContent();sendForm('edit_job'); return false;" %></li>
    <li><%= link_to "Entfernen", @job, :method => :delete, :confirm => "Are you sure ?"%></li>
    <li><%= link_to 'Abbrechen', jobs_path %></li>
  </ul>
<% end %>

<div id="job-edit" data-id="<%=@job.id%>">
  <h1>Job bearbeiten</h1>
  
</div>