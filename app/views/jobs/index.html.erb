<% if user_signed_in? %>

  <% content_for :actionbar do %>
    <ul>
      <li><%= link_to 'Neuer Job', new_job_path %></li>
    </ul>
  <% end %>
<% end %>
<script>
$(function() {
	$( "#content-tabs" ).tabs();
});
</script>
<div id="content-tabs">
  <div id="sub-navigation">
    <ul>
      <li><a href="#all">Alle</a></li>
      <li><a href="#popular">Popul&auml;r</a></li>
      <li><a href="#local">Lokal</a></li>
    </ul>
  </div>
  <div class="content-box" id="all">
    <%if @jobs.empty? %>
      <%= t('jobs_no_jobs') %>
    <% else %>
      <div id="list-jobs">
        <% @jobs.each do |job|%>
          <div class="job-container <% if job.status == 3 %>closed<% elsif job.status == 2 %>in-work<% else %>open<% end %>">
            <div class="job">
              <div class="job-details">
                <div class="job-title"><h3><%= link_to job.title, job %>
                <% if job.deadline < DateTime.now %>
                  <span class="expired">(expired)</span>
                <% end %></h3>
                </div>
                <div class="job-tags">
                  <ul>
                  <% job.tag_counts_on(:skills, :limit => 5, :order => "count desc").each do |tag| %>
                    <li><%= link_to tag.name, { :controller => :tags, :action => :show, :id => tag.id } %></li>
                  <% end %>
                  </ul>
                  <span class="clear"></span>
                </div>
              </div>
              <div class="job-interactions">
                <div class="job-fav"></div>
              </div>
              <span class="clear"></span>
            </div>
            <%
              likeClass = "likes-button like icon"
              if user_signed_in?
                if current_user.voted_up_on? job
                  likeClass << " voted"
                end
              end
              if job.likes.size == 0
                likeClass << " no-votes"
              end
            %>
            <div class="job-likes">
              <% if user_signed_in? %>
                <%= link_to '', like_job_path(job), :class => likeClass, :method => :put, :remote => true, :"data-id" => job.id%>
              <% else %>
                <%= link_to '', login_path, :class => "like icon no-login"%>
              <% end %>
              <div class="likes-number <% if job.likes.size == 0 %>hidden<%end%>"><%= job.likes.size %></div>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
  <div class="content-box" id="popular">
    Diese Funktion fehlt noch...
  </div>
  <div class="content-box" id="local">
    <%= form_tag '/jobs#local', :method => :get do %>
        <p>
          <%= text_field_tag :search, params[:search] %>
          <%= submit_tag "Search Near", :name => nil %>
        </p>
      <% end %>
      <% if (params[:search]) %>
        <%if @near_jobs.empty? %>
          <%= t('jobs_no_jobs') %>
        <% else %>
          <div id="list-jobs">
            <% @near_jobs.each do |job|%>
              <%= link_to job.title, job %>
            <% end %>
          </div>
        <% end %>
    <% else %>
        <%= t("jobs_near_search_info") %>
    <% end %>
  </div>
</div>
