<% if !@is_manager%>
  <div class="pin-status view-only">
    <%if @pin.status == 3%>
      <div class="status-closed btn small">
        <span class="now">Geschlossen</span><span class="new">Offen</span>
      </div>
    <%elsif @pin.status == 2 %>
      <div class="status-in-work btn small">
        <span class="now">In Arbeit</span><span class="new">Geschlossen</span>
      </div>
    <%else%>
      <div class="status-open btn small">
        <span class="now">Offen</span><span class="new">In Arbeit</span>
      </div>
    <%end%>
  </div>
<% else %>
  <div class="pin-status rights">
    <%if @pin.status == 3%>
      <%= link_to "javascript:;", method: :post, class: 'status-closed btn small', :remote => true do%>
        <span class="now">Geschlossen</span><span class="new">Offen</span>
      <%end%>
    <%elsif @pin.status == 2 %>
      <%= link_to "javascript:;", method: :post, class: 'status-in-work btn small', :remote => true do%>
        <span class="now">In Arbeit</span><span class="new">Geschlossen</span>
      <%end%>
    <%else%>
      <%= link_to "javascript:;", method: :post, class: 'status-open btn small', :remote => true do%>
        <span class="now">Offen</span><span class="new">In Arbeit</span>
      <%end%>
    <%end%>
  </div>
<% end %>
