<div id="pinboard">
  <div class="headline-navigation">
    <ul class="nav">
      <li class="active">
        <%= link_to pins_path+"?scope=categories", remote: true, data: {
              toggle: "headline-tab", target: "#categories-overview", remote: true
            } do %>
          <h1><%= t('pins_category_overview')%></h1>
        <% end %>
      </li>
      <li>
        <%= link_to pins_path+"?scope=pins", remote: true, data: {
              toggle: "headline-tab", target: "#pins-overview", remote: true
            } do %>
          <h1><%= t('pins_overview')%></h1>
        <% end %>
      </li>
    </ul>
  </div>
  <div class="tab-content content white">
    <div id="categories-overview" class="side-space overflow tab-pane active">
      <%= render :partial => 'categories_overview', :categories => @categories %>
    </div>
    <div id="pins-overview" class="tab-pane">
    </div>
  </div>
</div>
